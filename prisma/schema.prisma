generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name String  @unique
  games Games[]
  currTechsNum Int
  HighScore Int
  experiencePoint  Int
}

model Games {
  id        Int     @id @default(autoincrement())
  techs     String[]
  score     Int
  user      User @relation(fields: [userId], references: [id])
  userId    Int
}
