generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String  @id
  name            String
  games           Games[]
  highScore       Int @default(0)
}

model Games {
  id     Int      @id @default(autoincrement())
  techs  String[] @default(["html", "css", "js"])
  score  Int      @default(0)
  user   User     @relation(fields: [userId], references: [id])
  userId String
}
